/* miniprogram/pages/commitDynamic/commitDynamic.wxss */
@import '../../assets/fonts/iconfont.wxss';

.wrapper{
  width: 100%;
  height: 100vh;
  background-color: #F5FAFE;
}

.header-content{
  width: 94%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
}
.btn{
  font-size: 24rpx;
  text-align: center;
  padding: 10rpx 30rpx;
  background-color: rgb(254, 67, 101);
  color: #fff;
  border-radius: 12px;
  font-family: Arial, Helvetica, sans-serif;
  letter-spacing: 1px;
}
.main{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx 20rpx;
}
.user-info{
  display: flex;
  align-items: center;
}
.user-info .user_avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.user_avatar image{
  width: 100%;
}
.user-info .user_name{
  font-size: 28rpx;
  font-weight: bold;
  font-family: Arial, Helvetica, sans-serif;
}
.content{
  margin: 16rpx 8rpx 0;
  width: 100%;
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.image-wrapper{
  display: flex; 
  flex-wrap: wrap;
}
.addImage
{
  margin: 20rpx 70rpx 20rpx 0;
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F5FAFE;
}
.showImage{
  margin: 20rpx 70rpx 20rpx 0rpx;
  width: 150rpx;
  height: 150rpx;
  position: relative;
}
.showImage image{
  width: 100%;
  height: 100%;
}
.addImage image{
  width:50rpx;
}
.delete-pic{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 30rpx;
  height: 30rpx;
  overflow: hidden;
  border-radius: 50%;
  background-color: red;
  z-index: 100;
}
.addPlace{
  margin-top: 20rpx;
  width: 160rpx;
  border-radius: 10px;
  padding: 10rpx;
  background-color: #F5FAFE;
}
.addPlace image{
  width: 30rpx;
  vertical-align: middle;
}
.addPlace span{
  margin-left: 6rpx;
  font-size: 24rpx;
  vertical-align: middle;
}